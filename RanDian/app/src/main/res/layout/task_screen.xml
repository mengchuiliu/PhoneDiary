<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:background="@mipmap/task_screen_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/task_rank_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="-15dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/task_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/task_show_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="完成指数：XX任务"
            android:textColor="#F87251"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/task_show_national"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="\t全国排名：XXX\t\t\t\t"
            android:textColor="#F87251"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/task_show_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="\t好友排名：XXX\t\t\t\t"
            android:textColor="#F87251"
            android:textSize="13sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/task_show_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="距离上一名用户仅有XX个任务，\n翻滚吧，小主"
        android:textColor="#F87251"
        android:textSize="13sp" />
</LinearLayout>