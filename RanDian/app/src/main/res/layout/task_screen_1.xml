<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/task_screen_bg_1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/task_rank_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="5dp"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/task_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/task_show_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-23dp"
            android:layout_marginStart="-23dp"
            android:layout_marginTop="60dp"
            android:text="已完成任务：9"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/task_show_national"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-25dp"
            android:layout_marginStart="-25dp"
            android:layout_marginTop="10dp"
            android:text="当前排名：9\t\t"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/task_show_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="只需要在完成X个任务\n即可获取奖励"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-32dp"
            android:layout_marginStart="-32dp"
            android:layout_marginTop="10dp"
            android:text="任务奖励："
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-28dp"
            android:layout_marginStart="-28dp"
            android:layout_marginTop="10dp"
            android:text="5元现金红包"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:text="仅限排名前1000名用户"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>