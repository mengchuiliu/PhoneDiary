<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.rdcx.randian.DiaryShow">

    <RelativeLayout
        android:id="@+id/re_diary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@color/backg">

        <TextView
            android:id="@+id/show_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/left_home_tv"
            android:drawableLeft="@mipmap/diary_back"
            android:gravity="center"
            android:padding="10dp"
            android:text=" 返回"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/show_complete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/left_home_tv"
            android:gravity="center"
            android:padding="10dp"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/show_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:textColor="@color/text_color"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/show_text"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="@color/white"
        android:gravity="left"
        android:hint="这一刻的想法"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:textColorHint="#88000000"
        android:textCursorDrawable="@drawable/youbiao"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <GridView
        android:id="@+id/gv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:horizontalSpacing="5dp"
        android:listSelector="@color/transparent"
        android:numColumns="4"
        android:padding="15dp"
        android:scrollbars="none"
        android:verticalSpacing="15dp" />
</LinearLayout>
