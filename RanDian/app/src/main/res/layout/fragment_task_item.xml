<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

    <TextView
        android:id="@+id/task_item_id"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/text1"/>

    <View
        android:id="@+id/line1"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/task_item_id"
        android:layout_toRightOf="@+id/task_item_id"
        android:background="@color/separator"/>

    <TextView
        android:id="@+id/task_item_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/line1"
        android:layout_toLeftOf="@+id/task_item_finish"
        android:layout_toRightOf="@+id/line1"
        android:layout_toStartOf="@+id/task_item_finish"
        android:gravity="center_vertical|start"/>

    <ImageView
        android:id="@+id/task_item_finish"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_toLeftOf="@+id/task_item_more"
        android:layout_toStartOf="@+id/task_item_more"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:src="@mipmap/task_not_finish"/>

    <ImageView
        android:id="@+id/task_item_more"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/app_name"
        android:gravity="center"/>

</RelativeLayout>